                        FontSize="16"
                        FontWeight="Bold"
                        Text="Quick Settings"
                        TextTrimming="CharacterEllipsis" />

                    <Button
                        x:Name="SettingsButton"
                        Canvas.Left="256"
                        Width="51"
                        Height="51"
                        Margin="0"
                        Padding="0"
                        BorderThickness="0"
                        ToolTip="All settings [Not implemented]">
                        <Button.Background>
                            <SolidColorBrush x:Name="SettingsButtonBrush" Color="Transparent" />
