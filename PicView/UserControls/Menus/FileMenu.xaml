                    x:Name="Open_Border"
                    Canvas.Left="9"
                    Canvas.Top="59"
                    Style="{StaticResource SexyBorder}">
                    <Button
                        x:Name="Open"
                        Content="Open"
                        FocusVisualStyle="{x:Null}"
                        FontSize="14"
                        FontWeight="Bold"
                        ToolTip="Open a file" />
                    <Border.Background>
                        <SolidColorBrush x:Name="OpenBorderBrush" Color="{StaticResource BackgroundColorAlt}" />
                    </Border.Background>
                </Border>

                <Border
                    x:Name="Open_File_Location_Border"
                    Canvas.Left="134"
                    Canvas.Top="59"
                    Style="{StaticResource SexyBorder}">
                    <Button
                        x:Name="Open_File_Location"
                        Content="Find on Disk"
                        FocusVisualStyle="{x:Null}"
                        FontSize="14"
                        FontWeight="Bold"
                        ToolTip="Shows current image in your file system" />
                    <Border.Background>
                        <SolidColorBrush x:Name="OpenFileLocationBorderBrush" Color="{StaticResource BackgroundColorAlt}" />
                    </Border.Background>
                </Border>

                <Border
                    x:Name="Print_Border"
                    Canvas.Left="9"
                    Canvas.Top="116"
                    Style="{StaticResource SexyBorder}">
                    <Button
                        x:Name="Print"
                        Content="Print"
                        FocusVisualStyle="{x:Null}"
                        FontSize="14"
                        FontWeight="Bold"
                        ToolTip="Print the current image" />
