<UserControl
    x:Class="PicView.UserControls.ToolsAndEffectsMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:uc="clr-namespace:PicView.UserControls"
    Foreground="{StaticResource MainColorBrush}">

    <UserControl.Resources>
        <SolidColorBrush x:Key="FlaskBrush" Color="{StaticResource MainColor}" />
        <SolidColorBrush x:Key="ImagesBrush" Color="{StaticResource MainColor}" />
