                                Stretch="Fill" />

                            <TextBlock
                                Canvas.Left="-72"
                                Canvas.Top="-9"
                                FontSize="14"
                                FontWeight="Bold">
                                Optimize &amp; Resize
                            </TextBlock>
                        </Canvas>
                    </Button>

                    <uc:MenuCloseButton x:Name="CloseButton" Canvas.Left="305" />
                </Canvas>

                <Border
                    x:Name="CropButtonBorder"
                    Canvas.Left="6"
                    Canvas.Top="58"
                    Width="156"
                    Height="51"
                    Style="{StaticResource SexyBorder}">
                    <Border.Background>
                        <SolidColorBrush x:Name="CopyButtonBrush" Color="{StaticResource BackgroundColorAlt}" />
                    </Border.Background>
                    <Button
                        x:Name="CropButton"
                        FontWeight="Bold"
                        ToolTip="Crop image [C] (not implemented yet)">
                        <Canvas>
                            <TextBlock
                                Canvas.Left="-59"
                                Canvas.Top="-8"
                                FontSize="14"
                                Text="Crop Picture" />
