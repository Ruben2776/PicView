    <StackPanel>
        <Border
            Width="360"
            Height="178"
            Margin="-5,0,0,0"
            Background="{StaticResource NoisyBg}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="2"
            CornerRadius="2">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="10"
                    Direction="77"
                    ShadowDepth="5"
                    Color="{StaticResource AltInterfaceW}" />
            </Border.Effect>

            <Canvas>
                <Canvas
                    Width="358"
                    Height="51"
                    VerticalAlignment="Top">
                    <Canvas.Effect>
                        <DropShadowEffect
                            BlurRadius="4"
                            Direction="268"
                            ShadowDepth="1"
                            Color="Black" />
                    </Canvas.Effect>
                    <Rectangle
                        Canvas.Top="50"
                        Width="358"
                        Panel.ZIndex="1"
                        Stroke="{StaticResource BorderBrush}"
                        StrokeThickness="1" />

                    <Rectangle
                        Canvas.Left="166"
                        Width="1"
                        Height="50"
                        Panel.ZIndex="1"
                        Stroke="{StaticResource BorderBrush}"
                        StrokeThickness="1" />

                    <Rectangle
                        Canvas.Left="304"
                        Width="1"
                        Height="50"
                        Panel.ZIndex="1"
                        Stroke="{StaticResource BorderBrush}"
                        StrokeThickness="1" />
                    <Button
                        x:Name="EffectsButton"
                        Canvas.Left="166"
                        Width="138"
                        Height="51"
                        ToolTip="Show effects window">
                        <Button.Background>
                            <SolidColorBrush x:Name="EffectsButtonBrush" Color="{StaticResource BackgroundColorAlt}" />
                        </Button.Background>
                        <Canvas>
                            <Image
                                Canvas.Left="40"
                                Canvas.Top="-9"
                                Width="17"
                                Height="17"
                                Stretch="Fill">
                                <Image.Source>
                                    <DrawingImage>
                                        <DrawingImage.Drawing>
                                            <DrawingGroup ClipGeometry="M0,0 V512 H512 V0 H0 Z">
