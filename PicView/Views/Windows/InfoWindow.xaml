<Window
    x:Class="PicView.Views.Windows.InfoWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:PicView.UILogic.UserControls"
    Title="{StaticResource ResourceKey=InfoWindowTitle}"
    AllowsTransparency="True"
    Background="#990F0F0F"
    FontFamily="/PicView;component/Themes/Resources/fonts/#Roboto"
    Foreground="{StaticResource MainColorBrush}"
    ShowInTaskbar="False"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="txtItalic" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontFamily" Value="/PicView;component/Themes/Resources/fonts/#Roboto LightItalic" />
            <Setter Property="FontStyle" Value="Italic" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="Foreground" Value="{StaticResource MainColorFadedBrush}" />
        </Style>
    </Window.Resources>

    <Border
        Width="560"
        MinHeight="650"
        Margin="0,45,0,45"
        BorderBrush="{StaticResource BorderBrush}"
        BorderThickness="1"
        Effect="{StaticResource MenuShadow}">

        <DockPanel LastChildFill="True">

            <DockPanel
                x:Name="TitleBar"
                Height="35"
                Background="{StaticResource WindowBackgroundColorBrush}"
                DockPanel.Dock="Top">

                <uc:Logo Margin="6,0,7,0" />

                <uc:CloseButton
                    x:Name="CloseButton"
                    VerticalAlignment="Center"
                    DockPanel.Dock="Right" />

                <TextBlock
                    x:Name="Bar"
                    Height="35"
                    Padding="5,7,45,0"
                    VerticalAlignment="Center"
                    d:Text="Information, help &amp; shortcuts"
                    Background="{StaticResource BackgroundSubtleHighlightBrush}"
                    FontFamily="/PicView;component/Themes/Resources/fonts/#Roboto Bold"
                    FontSize="15"
                    Foreground="{StaticResource MainColorBrush}"
                    Text="{StaticResource ResourceKey=InfoWindowTitle}"
                    TextAlignment="Center"
                    TextTrimming="CharacterEllipsis" />
            </DockPanel>

            <ScrollViewer
                x:Name="Scroller"
                Background="{StaticResource BackgroundColorBrushFadeSubtle}"
                CanContentScroll="False"
                HorizontalScrollBarVisibility="Disabled"
                VerticalScrollBarVisibility="Auto">

                <StackPanel>

                    <Label
                        Margin="1,22,0,11"
                        HorizontalAlignment="Center"
                        d:Content="Application Shortcuts"
                        Content="{StaticResource ResourceKey=ApplicationShortcuts}"
                        FontFamily="/PicView;component/Themes/Resources/fonts/#Roboto Bold"
                        FontSize="15" />

                    <Label
                        Width="480"
                        Margin="-4,0,0,10"
                        d:Content="Navigation"
                        Content="{StaticResource ResourceKey=Navigation}" />

                    <Grid Width="480" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="145" />
                            <ColumnDefinition Width="170" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Border
                            Grid.Row="0"
                            Grid.Column="0"
                            Padding="0,3,0,3"
                            Background="{StaticResource AltInterfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1,1,1,0">
                            <TextBlock
                                Margin="10,3,0,3"
                                FontSize="15"
                                Text="{StaticResource ResourceKey=NextImage}" />
                        </Border>

                        <Border
                            Grid.Row="0"
                            Grid.Column="1"
                            Padding="0,3,0,3"
                            Background="{StaticResource AltInterfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,1,1,0">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="A" />
                        </Border>

                        <Border
                            Grid.Row="0"
                            Grid.Column="2"
                            Padding="0,3,0,3"
                            Background="{StaticResource AltInterfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,1,1,0">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="{StaticResource ResourceKey=Left}" />
                        </Border>

                        <Border
                            Grid.Row="1"
                            Grid.Column="0"
                            Padding="0,3,0,3"
                            Background="{StaticResource BackgroundColorBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1,1,1,0">
                            <TextBlock
                                Margin="10,3,0,3"
                                d:Text="Previous image"
                                FontSize="15"
                                Text="{StaticResource ResourceKey=PrevImage}" />
                        </Border>

                        <Border
                            Grid.Row="1"
                            Grid.Column="1"
                            Padding="0,3,0,3"
                            Background="{StaticResource BackgroundColorBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,1,1,0">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="D" />
                        </Border>

                        <Border
                            Grid.Row="1"
                            Grid.Column="2"
                            Padding="0,3,0,3"
                            Background="{StaticResource BackgroundColorBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,1,1,0">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                d:Text="Right"
                                FontSize="14"
                                Text="{StaticResource ResourceKey=Right}" />
                        </Border>

                        <Border
                            Grid.Row="2"
                            Grid.Column="0"
                            Padding="0,3,0,3"
                            Background="{StaticResource AltInterfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1,1,1,0">
                            <TextBlock
                                Margin="10,3,0,3"
                                FontSize="15"
                                Text="{StaticResource ResourceKey=FirstImage}" />
                        </Border>

                        <Border
                            Grid.Row="2"
                            Grid.Column="1"
                            Padding="0,3,0,3"
                            Background="{StaticResource AltInterfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,1,1,0">
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock
                                    d:Text="Ctrl"
                                    FontSize="14"
                                    Text="{StaticResource ResourceKey=Ctrl}" />
                                <TextBlock
                                    FontSize="14"
                                    Foreground="{StaticResource MainColorFadedBrush}"
                                    Text=" + " />
                                <TextBlock FontSize="14" Text="A" />
                            </StackPanel>
                        </Border>

                        <Border
                            Grid.Row="2"
                            Grid.Column="2"
                            Padding="0,3,0,3"
                            Background="{StaticResource AltInterfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,1,1,0">
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock
                                    d:Text="Ctrl"
                                    FontSize="14"
                                    Text="{StaticResource ResourceKey=Ctrl}" />
                                <TextBlock
                                    FontSize="14"
                                    Foreground="{StaticResource MainColorFadedBrush}"
                                    Text=" + " />
                                <TextBlock
                                    d:Text="Left"
                                    FontSize="14"
                                    Text="{StaticResource ResourceKey=Left}" />
                            </StackPanel>
                        </Border>

                        <Border
                            Grid.Row="4"
                            Grid.Column="0"
                            Padding="0,3,0,3"
                            Background="{StaticResource BackgroundColorBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1,0,1,0">
                            <TextBlock
                                Margin="10,3,0,3"
                                d:Text="Last image"
                                FontSize="15"
                                Text="{StaticResource ResourceKey=LastImage}" />
                        </Border>

                        <Border
                            Grid.Row="4"
                            Grid.Column="1"
                            Padding="0,3,0,3"
                            Background="{StaticResource BackgroundColorBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1,0,1,0">
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock
                                    d:Text="Ctrl"
                                    FontSize="14"
                                    Text="{StaticResource ResourceKey=Ctrl}" />
                                <TextBlock
                                    FontSize="14"
                                    Foreground="{StaticResource MainColorFadedBrush}"
                                    Text=" + " />
                                <TextBlock FontSize="14" Text="D" />
                            </StackPanel>
                        </Border>

                        <Border
                            Grid.Row="4"
                            Grid.Column="2"
                            Padding="0,3,0,3"
                            Background="{StaticResource BackgroundColorBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1,0,1,0">
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock
                                    d:Text="Ctrl"
                                    FontSize="14"
                                    Text="{StaticResource ResourceKey=Ctrl}" />
                                <TextBlock
                                    FontSize="14"
                                    Foreground="{StaticResource MainColorFadedBrush}"
                                    Text=" + " />
                                <TextBlock
                                    d:Text="Right"
                                    FontSize="14"
                                    Text="{StaticResource ResourceKey=Right}" />
                            </StackPanel>
                        </Border>

                        <Border
                            Grid.Row="5"
                            Grid.Column="0"
                            Padding="0,3,0,3"
                            Background="{StaticResource AltInterfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1,1,1,1">
                            <TextBlock
                                Margin="10,3,0,3"
                                d:Text="Toggle looping"
                                FontSize="15"
                                Text="{StaticResource ResourceKey=ToggleLooping}" />
                        </Border>

                        <Border
                            Grid.Row="5"
                            Grid.Column="1"
                            Padding="0,3,0,3"
                            Background="{StaticResource AltInterfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,1,1,1">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="L" />
                        </Border>

                        <Border
                            Grid.Row="5"
                            Grid.Column="2"
                            Padding="0,3,0,3"
                            Background="{StaticResource AltInterfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,1,1,1">
                            <TextBlock
                                MaxWidth="155"
                                Style="{StaticResource txtItalic}"
                                Text="{StaticResource ResourceKey=SavedOnNextStartUp}"
                                TextWrapping="Wrap" />
                        </Border>
                    </Grid>

                    <Label
                        Width="480"
                        Margin="-4,0,0,10"
                        d:Content="Image control"
                        Content="{StaticResource ResourceKey=ImageControl}" />

                    <Grid Width="480" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="145" />
                            <ColumnDefinition Width="170" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Border
                            Grid.Row="0"
                            Grid.Column="0"
                            Padding="0,3,0,3"
                            Background="{StaticResource AltInterfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1,1,1,0">
                            <TextBlock
                                Margin="10,3,0,3"
                                d:Text="Rotate right"
                                FontSize="15"
                                Text="{StaticResource ResourceKey=RotateRight}" />
                        </Border>

                        <Border
                            Grid.Row="0"
                            Grid.Column="1"
                            Padding="0,3,0,3"
                            Background="{StaticResource AltInterfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,1,1,0">
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock
                                    d:Text="Ctrl"
                                    FontSize="14"
                                    Text="{StaticResource ResourceKey=Ctrl}" />
                                <TextBlock
                                    FontSize="14"
                                    Foreground="{StaticResource MainColorFadedBrush}"
                                    Text=" + " />
                                <TextBlock FontSize="14" Text="{StaticResource Up}" />
                            </StackPanel>
                        </Border>

                        <Border
                            Grid.Row="0"
                            Grid.Column="2"
                            Padding="0,3,0,3"
                            Background="{StaticResource AltInterfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,1,1,0" />

                        <Border
                            Grid.Row="1"
                            Grid.Column="0"
                            Padding="0,3,0,3"
                            Background="{StaticResource BackgroundColorBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1,1,1,0">
                            <TextBlock
                                Margin="10,3,0,3"
                                d:Text="Rotate left"
                                FontSize="15"
                                Text="{StaticResource ResourceKey=RotateLeft}" />
                        </Border>

                        <Border
                            Grid.Row="1"
                            Grid.Column="1"
                            Padding="0,3,0,3"
                            Background="{StaticResource BackgroundColorBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,1,1,0">
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock
                                    d:Text="Ctrl"
                                    FontSize="14"
                                    Text="{StaticResource ResourceKey=Ctrl}" />
                                <TextBlock
                                    FontSize="14"
                                    Foreground="{StaticResource MainColorFadedBrush}"
                                    Text=" + " />
                                <TextBlock FontSize="14" Text="{StaticResource Down}" />
                            </StackPanel>
                        </Border>

                        <Border
                            Grid.Row="1"
                            Grid.Column="2"
                            Padding="0,3,0,3"
                            Background="{StaticResource BackgroundColorBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,1,1,0" />

                        <Border
                            Grid.Row="2"
                            Grid.Column="0"
                            Padding="0,3,0,3"
                            Background="{StaticResource AltInterfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1,0,1,1">
                            <TextBlock
                                Margin="10,3,0,3"
                                d:Text="Flip"
                                FontSize="15"
                                Text="{StaticResource ResourceKey=Flip}" />
                        </Border>

                        <Border
                            Grid.Row="2"
                            Grid.Column="1"
                            Padding="0,3,0,3"
                            Background="{StaticResource AltInterfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1,0,1,1">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="15"
                                Text="F" />
                        </Border>

                        <Border
                            Grid.Row="2"
                            Grid.Column="2"
                            Padding="0,3,0,3"
                            Background="{StaticResource AltInterfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1,0,1,1" />
                    </Grid>

                    <Label
                        Width="480"
                        Margin="-4,0,0,10"
                        d:Content="Zoom"
                        Content="{StaticResource ResourceKey=Zoom}" />

                    <Grid Width="480" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="145" />
                            <ColumnDefinition Width="170" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Border
                            Grid.Row="0"
                            Grid.Column="0"
                            Padding="0,3,0,3"
                            Background="{StaticResource AltInterfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1,1,1,0">
                            <TextBlock
                                Margin="10,3,0,3"
                                d:Text="Zoom in"
                                FontSize="15"
                                Text="{StaticResource ResourceKey=ZoomIn}" />
                        </Border>

                        <Border
                            Grid.Row="0"
                            Grid.Column="1"
                            Padding="0,3,0,3"
                            Background="{StaticResource AltInterfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,1,1,0">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                d:Text="Mouse wheel"
                                FontSize="14"
                                Text="{StaticResource ResourceKey=MouseWheel}" />
                        </Border>

                        <Border
                            Grid.Row="0"
                            Grid.Column="2"
                            Padding="0,3,0,3"
                            Background="{StaticResource AltInterfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,1,1,0">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                d:Text="Numpad +"
                                FontSize="14"
                                Text="{StaticResource ResourceKey=NumpadPlus}" />
                        </Border>

                        <Border
                            Grid.Row="1"
                            Grid.Column="0"
                            Padding="0,3,0,3"
                            Background="{StaticResource BackgroundColorBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1,1,1,0">
                            <TextBlock
                                Margin="10,3,0,3"
                                d:Text="Zoom out"
                                FontSize="15"
                                Text="{StaticResource ResourceKey=ZoomOut}" />
                        </Border>

                        <Border
                            Grid.Row="1"
                            Grid.Column="1"
                            Padding="0,3,0,3"
                            Background="{StaticResource BackgroundColorBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,1,1,0">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                d:Text="Mouse wheel"
                                FontSize="14"
                                Text="{StaticResource ResourceKey=MouseWheel}" />
                        </Border>

                        <Border
                            Grid.Row="1"
                            Grid.Column="2"
                            Padding="0,3,0,3"
                            Background="{StaticResource BackgroundColorBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,1,1,0">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                d:Text="Numpad -"
                                FontSize="14"
                                Text="{StaticResource ResourceKey=NumpadMinus}" />
                        </Border>

                        <Border
                            Grid.Row="2"
                            Grid.Column="0"
                            Padding="0,3,0,3"
                            Background="{StaticResource AltInterfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1,1,1,0">
                            <TextBlock
                                Margin="10,3,0,3"
                                d:Text="Pan"
                                FontSize="15"
                                Text="{StaticResource ResourceKey=Pan}" />
                        </Border>

                        <Border
                            Grid.Row="2"
                            Grid.Column="1"
                            Padding="0,3,0,3"
                            Background="{StaticResource AltInterfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,1,1,0">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                d:Text="Mouse drag"
                                FontSize="14"
                                Text="{StaticResource ResourceKey=MouseDrag}" />
                        </Border>

                        <Border
                            Grid.Row="2"
                            Grid.Column="2"
                            Padding="0,3,0,3"
                            Background="{StaticResource AltInterfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,1,1,0" />

                        <Border
                            Grid.Row="3"
                            Grid.Column="0"
                            Padding="0,3,0,3"
                            Background="{StaticResource BackgroundColorBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1,0,1,1">
                            <TextBlock
                                Margin="10,3,0,3"
                                d:Text="Reset zoom"
                                FontSize="15"
                                Text="{StaticResource ResourceKey=ResetZoom}" />
                        </Border>

                        <Border
                            Grid.Row="3"
                            Grid.Column="1"
                            Padding="0,3,0,3"
                            Background="{StaticResource BackgroundColorBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1,0,1,1">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                d:Text="Double click"
                                FontSize="14"
                                Text="{StaticResource ResourceKey=DoubleClick}" />
                        </Border>

                        <Border
                            Grid.Row="3"
                            Grid.Column="2"
                            Padding="0,3,0,3"
                            Background="{StaticResource BackgroundColorBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1,0,1,1" />

                        <Border
                            Grid.Row="4"
                            Grid.Column="0"
                            Padding="0,3,0,3"
                            Background="{StaticResource AltInterfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1,0,1,1">
                            <TextBlock
                                Margin="10,3,0,3"
                                d:Text="Toggle scroll"
                                FontSize="15"
                                Text="{StaticResource ResourceKey=ToggleScroll}" />
                        </Border>

                        <Border
                            Grid.Row="4"
                            Grid.Column="1"
                            Padding="0,3,0,3"
                            Background="{StaticResource AltInterfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1,0,1,1">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="X" />
                        </Border>

                        <Border
                            Grid.Row="4"
                            Grid.Column="2"
                            Padding="0,3,0,3"
                            Background="{StaticResource AltInterfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1,0,1,1">
                            <TextBlock
                                MaxWidth="155"
                                Style="{StaticResource txtItalic}"
                                Text="{StaticResource ResourceKey=SavedOnNextStartUp}"
                                TextWrapping="Wrap" />
                        </Border>
                    </Grid>

                    <Label
                        Width="480"
                        Margin="-4,0,0,10"
                        d:Content="Window scaling"
                        Content="{StaticResource ResourceKey=WindowScaling}" />

                    <Grid Width="480" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="145" />
                            <ColumnDefinition Width="170" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Border
                            Grid.Row="0"
                            Grid.Column="0"
                            Padding="0,3,0,3"
                            Background="{StaticResource AltInterfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1,1,1,0">
                            <TextBlock
                                Margin="10,3,0,3"
                                d:Text="Normal window"
                                FontSize="15"
                                Text="{StaticResource ResourceKey=NormalWindow}" />
                        </Border>

                        <Border
                            Grid.Row="0"
                            Grid.Column="1"
                            Padding="0,3,0,3"
                            Background="{StaticResource AltInterfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,1,1,0">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="1" />
                        </Border>

                        <Border
                            Grid.Row="0"
                            Grid.Column="2"
                            Padding="0,3,0,3"
                            Background="{StaticResource AltInterfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,1,1,0">
                            <TextBlock
                                MaxWidth="155"
                                Style="{StaticResource txtItalic}"
                                Text="{StaticResource ResourceKey=SavedOnNextStartUp}"
                                TextWrapping="Wrap" />
                        </Border>

                        <Border
                            Grid.Row="1"
                            Grid.Column="0"
                            Padding="0,3,0,3"
                            Background="{StaticResource BackgroundColorBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1,1,1,0">
                            <TextBlock
                                Margin="10,3,0,3"
                                d:Text="Fill height"
                                FontSize="15"
                                Text="{StaticResource ResourceKey=FillHeight}" />
                        </Border>

                        <Border
                            Grid.Row="1"
                            Grid.Column="1"
                            Padding="0,3,0,3"
                            Background="{StaticResource BackgroundColorBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,1,1,0">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="2" />
                        </Border>

                        <Border
                            Grid.Row="1"
                            Grid.Column="2"
                            Padding="0,3,0,3"
                            Background="{StaticResource BackgroundColorBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,1,1,0">
                            <TextBlock
                                MaxWidth="155"
                                Style="{StaticResource txtItalic}"
                                Text="{StaticResource ResourceKey=SavedOnNextStartUp}"
                                TextWrapping="Wrap" />
                        </Border>

                        <Border
                            Grid.Row="2"
