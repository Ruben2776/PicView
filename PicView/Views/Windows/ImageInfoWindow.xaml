<Window
    x:Class="PicView.Views.Windows.ImageInfoWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:PicView.UILogic.UserControls"
    Title="{StaticResource ImageInfo}"
    Width="806"
    Height="370"
    BorderBrush="{DynamicResource ChosenColorBrush}"
    BorderThickness="1"
    FontFamily="/PicView;component/Themes/Resources/fonts/#Roboto"
    Foreground="{StaticResource MainColorBrush}"
    ResizeMode="CanMinimize"
    Style="{DynamicResource MyWindowStyle}"
    mc:Ignorable="d">

    <DockPanel>
        <DockPanel
            x:Name="TitleBar"
            Height="33"
            Background="{StaticResource WindowBackgroundColorBrush}"
            DockPanel.Dock="Top">

            <uc:Logo />

            <Rectangle
                Width="1"
                Height="35"
                Margin="8,0,0,0"
                Fill="{StaticResource BorderBrush}" />

            <Button
                x:Name="FileProperties"
                Height="34"
                Padding="15,1,15,1"
                Content="{StaticResource FileProperties}"
                Style="{StaticResource MetroFlatButton}">
                <Button.Foreground>
                    <SolidColorBrush x:Name="FilePropertiesFill" Color="{StaticResource MainColor}" />
                </Button.Foreground>
                <Button.Background>
                    <SolidColorBrush x:Name="FilePropertiesBrush" Color="Transparent" />
                </Button.Background>
            </Button>

            <Rectangle
                Width="1"
                Height="35"
                Fill="{StaticResource BorderBrush}" />

            <Button
                x:Name="Print"
                Height="34"
                Padding="15,1,15,1"
                Content="{StaticResource Print}"
                Style="{StaticResource MetroFlatButton}">
                <Button.Foreground>
                    <SolidColorBrush x:Name="PrintFill" Color="{StaticResource MainColor}" />
                </Button.Foreground>
                <Button.Background>
                    <SolidColorBrush x:Name="PrintBrush" Color="Transparent" />
                </Button.Background>
            </Button>

            <Rectangle
                Width="1"
                Height="35"
                Fill="{StaticResource BorderBrush}" />

            <Button
                x:Name="OpenWith"
                Height="34"
                Padding="15,1,15,1"
                Content="{StaticResource OpenWith}"
                Style="{StaticResource MetroFlatButton}">
                <Button.Foreground>
                    <SolidColorBrush x:Name="OpenWithFill" Color="{StaticResource MainColor}" />
                </Button.Foreground>
                <Button.Background>
                    <SolidColorBrush x:Name="OpenWithBrush" Color="Transparent" />
                </Button.Background>
            </Button>

            <Rectangle
                Width="1"
                Height="35"
                Fill="{StaticResource BorderBrush}" />

            <Button
                x:Name="ShowInFoler"
                Height="34"
                Padding="15,1,15,1"
                Content="{StaticResource ShowInFolder}"
                Style="{StaticResource MetroFlatButton}">
                <Button.Foreground>
                    <SolidColorBrush x:Name="ShowInFolerFill" Color="{StaticResource MainColor}" />
                </Button.Foreground>
                <Button.Background>
                    <SolidColorBrush x:Name="ShowInFolerBrush" Color="Transparent" />
                </Button.Background>
            </Button>

            <Rectangle
                Width="1"
                Height="35"
                Fill="{StaticResource BorderBrush}" />

            <uc:CloseButton
                x:Name="CloseButton"
                VerticalAlignment="Center"
                DockPanel.Dock="Right" />

            <Rectangle
                Width="1"
                Height="35"
                DockPanel.Dock="Right"
                Fill="{StaticResource BorderBrush}" />

            <uc:MinButton
                x:Name="MinButton"
                VerticalAlignment="Center"
                DockPanel.Dock="Right" />

            <Rectangle
                Width="1"
                Height="35"
                DockPanel.Dock="Right"
                Fill="{StaticResource BorderBrush}" />

            <TextBlock
                x:Name="Bar"
                Height="35"
                Padding="0,8.4,0,0"
                VerticalAlignment="Center"
                d:Text="Image Info"
                Background="{StaticResource AltInterfaceWBrush}"
                FontFamily="/PicView;component/Themes/Resources/fonts/#Roboto"
                FontSize="15"
                FontWeight="Bold"
                Foreground="{StaticResource MainColorBrush}"
                Text="{Binding Title, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                TextAlignment="Center"
                TextTrimming="CharacterEllipsis" />
        </DockPanel>

        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
            <StackPanel
                x:Name="MainBackground"
                Background="{StaticResource NoisyBg}"
                Orientation="Horizontal">
                
                <StackPanel Margin="0,5,10,0" Orientation="Vertical">

                    <StackPanel Margin="15,15,0,0" Orientation="Horizontal">
                        <Label
                            Width="130"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            Content="{StaticResource FileName}" />
                        <TextBox
                            x:Name="FilenameBox"
                            Width="180"
                            Padding="10,8,0,8"
                            VerticalAlignment="Center"
                            d:Text="404.jpg"
                            Foreground="{StaticResource MainColorFadedBrush}"
                            IsReadOnly="True" />
                        <Border
                            Width="37"
                            Height="35"
                            Margin="10,0,0,0"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1">
                            <uc:CopyButton x:Name="FilenameCopy" ToolTip="{StaticResource Copy}" />
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="15,15,0,0" Orientation="Horizontal">
                        <Label
                            Width="130"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            Content="{StaticResource Folder}" />
                        <TextBox
                            x:Name="FolderBox"
                            Width="180"
                            Padding="10,8,0,8"
                            VerticalAlignment="Center"
                            d:Text="D:\Pictures"
                            Foreground="{StaticResource MainColorFadedBrush}"
                            IsReadOnly="True" />
                        <Border
                            Width="37"
                            Height="35"
                            Margin="10,0,0,0"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1">
                            <uc:CopyButton x:Name="FolderCopy" ToolTip="{StaticResource Copy}" />
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="15,15,0,0" Orientation="Horizontal">
                        <Label
                            Width="130"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            Content="{StaticResource FullPath}" />
                        <TextBox
                            x:Name="FullPathBox"
                            Width="180"
                            Padding="10,8,0,8"
                            VerticalAlignment="Center"
                            d:Text="D:\Pictures\404.jpg"
                            Foreground="{StaticResource MainColorFadedBrush}"
                            IsReadOnly="True" />
                        <Border
                            Width="37"
                            Height="35"
                            Margin="10,0,0,0"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1">
                            <uc:CopyButton x:Name="FullpathCopy" ToolTip="{StaticResource Copy}" />
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="15,15,0,0" Orientation="Horizontal">
                        <Label
                            Width="130"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            Content="{StaticResource Created}" />
                        <TextBox
                            x:Name="CreatedBox"
                            Width="180"
                            Padding="10,8,0,8"
                            VerticalAlignment="Center"
                            d:Text="8/9/2019 - 10:37:42 PM"
                            Foreground="{StaticResource MainColorFadedBrush}"
                            IsReadOnly="True" />
                        <Border
                            Width="37"
                            Height="35"
                            Margin="10,0,0,0"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1">
                            <uc:CopyButton x:Name="CreatedCopy" ToolTip="{StaticResource Copy}" />
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="15,15,0,0" Orientation="Horizontal">
                        <Label
                            Width="130"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            Content="{StaticResource Modified}" />
                        <TextBox
                            x:Name="ModifiedBox"
                            Width="180"
                            Padding="10,8,0,8"
                            VerticalAlignment="Center"
                            d:Text="12/10/2018 - 7:41:14 PM"
                            Foreground="{StaticResource MainColorFadedBrush}"
                            IsReadOnly="True" />
                        <Border
                            Width="37"
                            Height="35"
                            Margin="10,0,0,0"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1">
                            <uc:CopyButton x:Name="ModifiedCopy" ToolTip="{StaticResource Copy}" />
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="15,15,0,0" Orientation="Horizontal">
                        <Label
                            Width="130"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            Content="{StaticResource BitDepth}" />
                        <TextBox
                            x:Name="BitDepthBox"
                            Width="180"
                            Padding="10,8,0,8"
                            VerticalAlignment="Center"
                            d:Text="24"
                            Foreground="{StaticResource MainColorFadedBrush}"
                            IsReadOnly="True" />
                        <Border
                            Width="37"
                            Height="35"
                            Margin="10,0,0,0"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1">
                            <uc:CopyButton x:Name="BitDepthCopy" ToolTip="{StaticResource Copy}" />
                        </Border>
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="0,5,0,0">

                    <StackPanel Margin="15,15,0,0" Orientation="Horizontal">
                        <Label
                            Width="130"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            Content="{StaticResource SizePx}" />
                        <TextBox
                            x:Name="SizePxBox"
                            Width="180"
                            Padding="10,8,0,8"
                            VerticalAlignment="Center"
                            d:Text="1920 x 1080 pixels"
                            Foreground="{StaticResource MainColorFadedBrush}"
                            IsReadOnly="True" />
                        <Border
                            Width="37"
                            Height="35"
                            Margin="10,0,0,0"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1">
                            <uc:CopyButton x:Name="SizePxCopy" ToolTip="{StaticResource Copy}" />
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="15,15,0,0" Orientation="Horizontal">
                        <Label
                            Width="130"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            Content="{StaticResource SizeMp}" />
                        <TextBox
                            x:Name="SizeMpBox"
                            Width="180"
                            Padding="10,8,0,8"
                            VerticalAlignment="Center"
                            d:Text="2.1 Megapixels"
                            Foreground="{StaticResource MainColorFadedBrush}"
                            IsReadOnly="True" />
                        <Border
                            Width="37"
                            Height="35"
                            Margin="10,0,0,0"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1">
                            <uc:CopyButton x:Name="SizeMpCopy" ToolTip="{StaticResource Copy}" />
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="15,15,0,0" Orientation="Horizontal">
                        <Label
                            Width="130"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            Content="{StaticResource Resolution}" />
                        <TextBox
                            x:Name="ResolutionBox"
                            Width="180"
                            Padding="10,8,0,8"
                            VerticalAlignment="Center"
                            d:Text="96 x 96 DPI"
                            Foreground="{StaticResource MainColorFadedBrush}"
                            IsReadOnly="True" />
                        <Border
                            Width="37"
                            Height="35"
                            Margin="10,0,0,0"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1">
                            <uc:CopyButton x:Name="DpiCopy" ToolTip="{StaticResource Copy}" />
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="15,15,0,0" Orientation="Horizontal">
                        <Label
                            Width="130"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            Content="{StaticResource PrintSizeCm}" />
                        <TextBox
                            x:Name="PrintSizeCmBox"
                            Width="180"
                            Padding="10,8,0,8"
                            VerticalAlignment="Center"
                            d:Text="50.8 x 28.58 centimeters"
                            Foreground="{StaticResource MainColorFadedBrush}"
                            IsReadOnly="True" />
                        <Border
                            Width="37"
                            Height="35"
                            Margin="10,0,0,0"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1">
                            <uc:CopyButton x:Name="PrintSizeCmCopy" ToolTip="{StaticResource Copy}" />
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="15,15,0,0" Orientation="Horizontal">
                        <Label
                            Width="130"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            Content="{StaticResource PrintSizeIn}" />
                        <TextBox
                            x:Name="PrintSizeInBox"
                            Width="180"
                            Padding="10,8,0,8"
                            VerticalAlignment="Center"
                            d:Text="20 x 11.25 inches"
                            Foreground="{StaticResource MainColorFadedBrush}"
                            IsReadOnly="True" />
                        <Border
                            Width="37"
                            Height="35"
                            Margin="10,0,0,0"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1">
                            <uc:CopyButton x:Name="PrintSizeInCopy" ToolTip="{StaticResource Copy}" />
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="15,15,0,0" Orientation="Horizontal">
                        <Label
                            Width="130"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            Content="{StaticResource AspectRatio}" />
                        <TextBox
                            x:Name="AspectRatioBox"
                            Width="180"
                            Padding="10,8,0,8"
                            VerticalAlignment="Center"
                            d:Text="16:9 (Landscape)"
                            Foreground="{StaticResource MainColorFadedBrush}"
                            IsReadOnly="True" />
                        <Border
                            Width="37"
                            Height="35"
                            Margin="10,0,0,0"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1">
                            <uc:CopyButton x:Name="AspectRatioCopy" ToolTip="{StaticResource Copy}" />
                        </Border>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
    </DockPanel>
</Window>