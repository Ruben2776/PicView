<Window
    x:Class="PicView.Views.Windows.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:PicView.Views.UserControls"
    Title="PicView settings"
    Width="431"
    BorderBrush="{StaticResource BorderBrush}"
    BorderThickness="1"
    FontFamily="/PicView;component/Themes/Resources/fonts/#Roboto"
    Foreground="{StaticResource MainColorBrush}"
    SizeToContent="Height"
    Style="{DynamicResource MyWindowStyle}"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary Source="\Themes\Styles\ComboBox.xaml" />
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <DockPanel
            x:Name="TitleBar"
            Height="33"
            Background="{StaticResource WindowBackgroundColorBrush}"
            DockPanel.Dock="Top">

            <uc:Logo />

            <Rectangle
                Width="1"
                Height="35"
                Margin="6,0,0,0"
                Fill="{StaticResource BorderBrush}" />

            <uc:CloseButton
                x:Name="CloseButton"
                VerticalAlignment="Center"
                DockPanel.Dock="Right" />

            <Rectangle
                Width="1"
                Height="35"
                DockPanel.Dock="Right"
                Fill="{StaticResource BorderBrush}" />

            <uc:MinButton
                x:Name="MinButton"
                VerticalAlignment="Center"
                DockPanel.Dock="Right" />

            <Rectangle
                Width="1"
                Height="35"
                DockPanel.Dock="Right"
                Fill="{StaticResource BorderBrush}" />

            <TextBlock
                x:Name="Bar"
                Height="35"
                Padding="0,8.4,0,0"
                VerticalAlignment="Center"
                Background="{StaticResource BackgroundSubtleHighlightBrush}"
                FontSize="15"
                FontWeight="Bold"
                Foreground="{StaticResource MainColorBrush}"
                Text="{StaticResource Settings}"
                TextAlignment="Center"
                TextTrimming="CharacterEllipsis" />
        </DockPanel>

        <Rectangle
            Height="1"
            DockPanel.Dock="Top"
            Fill="{StaticResource BorderBrush}" />

        <ScrollViewer
            x:Name="Scroller"
            Background="{StaticResource NoisyBg}"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto">

            <StackPanel>

                <Label
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="{StaticResource HighlightColor}" />

                <WrapPanel
                    Margin="15,3,15,8"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">

                    <RadioButton
                        x:Name="BlueRadio"
                        Content="{StaticResource Blue}"
                        Style="{StaticResource MetroFlatRadioButton}">
                        <RadioButton.Background>
                            <SolidColorBrush x:Name="BlueBrush" Color="{StaticResource BackgroundColorAlt}" />
                        </RadioButton.Background>
                        <RadioButton.Foreground>
                            <SolidColorBrush x:Name="BlueText" Color="{StaticResource MainColor}" />
                        </RadioButton.Foreground>
                    </RadioButton>

                    <RadioButton
                        x:Name="CyanRadio"
                        Content="{StaticResource Cyan}"
                        Style="{StaticResource MetroFlatRadioButton}">
                        <RadioButton.Background>
                            <SolidColorBrush x:Name="CyanBrush" Color="{StaticResource BackgroundColorAlt}" />
                        </RadioButton.Background>
                        <RadioButton.Foreground>
                            <SolidColorBrush x:Name="CyanText" Color="{StaticResource MainColor}" />
                        </RadioButton.Foreground>
                    </RadioButton>

                    <RadioButton
                        x:Name="AquaRadio"
                        Content="{StaticResource Aqua}"
                        Style="{StaticResource MetroFlatRadioButton}">
                        <RadioButton.Background>
                            <SolidColorBrush x:Name="AquaBrush" Color="{StaticResource BackgroundColorAlt}" />
                        </RadioButton.Background>
                        <RadioButton.Foreground>
                            <SolidColorBrush x:Name="AquaText" Color="{StaticResource MainColor}" />
                        </RadioButton.Foreground>
                    </RadioButton>

                    <RadioButton
                        x:Name="TealRadio"
                        Content="{StaticResource Teal}"
                        Style="{StaticResource MetroFlatRadioButton}">
                        <RadioButton.Background>
                            <SolidColorBrush x:Name="TealBrush" Color="{StaticResource BackgroundColorAlt}" />
                        </RadioButton.Background>
                        <RadioButton.Foreground>
                            <SolidColorBrush x:Name="TealText" Color="{StaticResource MainColor}" />
                        </RadioButton.Foreground>
                    </RadioButton>

                    <RadioButton
                        x:Name="LimeRadio"
                        Content="{StaticResource Lime}"
                        Style="{StaticResource MetroFlatRadioButton}">
                        <RadioButton.Background>
                            <SolidColorBrush x:Name="LimeBrush" Color="{StaticResource BackgroundColorAlt}" />
                        </RadioButton.Background>
                        <RadioButton.Foreground>
                            <SolidColorBrush x:Name="LimeText" Color="{StaticResource MainColor}" />
                        </RadioButton.Foreground>
                    </RadioButton>

                    <RadioButton
                        x:Name="GreenRadio"
                        Content="{StaticResource Green}"
                        Style="{StaticResource MetroFlatRadioButton}">
                        <RadioButton.Background>
                            <SolidColorBrush x:Name="GreenBrush" Color="{StaticResource BackgroundColorAlt}" />
                        </RadioButton.Background>
                        <RadioButton.Foreground>
                            <SolidColorBrush x:Name="GreenText" Color="{StaticResource MainColor}" />
                        </RadioButton.Foreground>
                    </RadioButton>

                    <RadioButton
                        x:Name="GoldenRadio"
                        Content="{StaticResource Golden}"
                        Style="{StaticResource MetroFlatRadioButton}">
                        <RadioButton.Background>
                            <SolidColorBrush x:Name="GoldenBrush" Color="{StaticResource BackgroundColorAlt}" />
                        </RadioButton.Background>
                        <RadioButton.Foreground>
                            <SolidColorBrush x:Name="GoldenText" Color="{StaticResource MainColor}" />
                        </RadioButton.Foreground>
                    </RadioButton>

                    <RadioButton
                        x:Name="OrangeRadio"
                        Content="{StaticResource Orange}"
                        Style="{StaticResource MetroFlatRadioButton}">
                        <RadioButton.Background>
                            <SolidColorBrush x:Name="OrangeBrush" Color="{StaticResource BackgroundColorAlt}" />
                        </RadioButton.Background>
                        <RadioButton.Foreground>
                            <SolidColorBrush x:Name="OrangeText" Color="{StaticResource MainColor}" />
                        </RadioButton.Foreground>
                    </RadioButton>

                    <RadioButton
                        x:Name="RedRadio"
                        Content="{StaticResource Red}"
                        Style="{StaticResource MetroFlatRadioButton}">
                        <RadioButton.Background>
                            <SolidColorBrush x:Name="RedBrush" Color="{StaticResource BackgroundColorAlt}" />
                        </RadioButton.Background>
                        <RadioButton.Foreground>
                            <SolidColorBrush x:Name="RedText" Color="{StaticResource MainColor}" />
                        </RadioButton.Foreground>
                    </RadioButton>

                    <RadioButton
                        x:Name="PinkRadio"
                        Content="{StaticResource Pink}"
                        Style="{StaticResource MetroFlatRadioButton}">
                        <RadioButton.Background>
                            <SolidColorBrush x:Name="PinkBrush" Color="{StaticResource BackgroundColorAlt}" />
                        </RadioButton.Background>
                        <RadioButton.Foreground>
                            <SolidColorBrush x:Name="PinkText" Color="{StaticResource MainColor}" />
                        </RadioButton.Foreground>
                    </RadioButton>

                    <RadioButton
                        x:Name="MagentaRadio"
                        Content="{StaticResource Magenta}"
                        Style="{StaticResource MetroFlatRadioButton}">
                        <RadioButton.Background>
                            <SolidColorBrush x:Name="MagentaBrush" Color="{StaticResource BackgroundColorAlt}" />
                        </RadioButton.Background>
                        <RadioButton.Foreground>
                            <SolidColorBrush x:Name="MagentaText" Color="{StaticResource MainColor}" />
                        </RadioButton.Foreground>
                    </RadioButton>

                    <RadioButton
                        x:Name="PurpleRadio"
                        Content="{StaticResource Purple}"
                        Style="{StaticResource MetroFlatRadioButton}">
                        <RadioButton.Background>
                            <SolidColorBrush x:Name="PurpleBrush" Color="{StaticResource BackgroundColorAlt}" />
                        </RadioButton.Background>
                        <RadioButton.Foreground>
                            <SolidColorBrush x:Name="PurpleText" Color="{StaticResource MainColor}" />
                        </RadioButton.Foreground>
                    </RadioButton>
                </WrapPanel>

                <Label
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="{StaticResource Theme}"
                    Foreground="{StaticResource MainColorBrush}" />

                <WrapPanel
                    Margin="15,3,15,8"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">

                    <Border
                        Width="167"
                        Height="45"
                        Margin="0,0,10,0"
                        Background="{StaticResource BackgroundColorBrushAlt}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="2"
                        Effect="{StaticResource MenuShadowButtonBorder}"
                        Focusable="False">
                        <CheckBox
                            x:Name="DarkThemeRadio"
                            HorizontalContentAlignment="Center"
                            d:IsChecked="True"
                            Content="{StaticResource DarkTheme}"
                            Style="{StaticResource Checkstyle}">
                            <CheckBox.Background>
                                <SolidColorBrush x:Name="DarkThemeBrush" Color="{StaticResource BackgroundColorAlt}" />
                            </CheckBox.Background>
                            <CheckBox.Foreground>
                                <SolidColorBrush x:Name="DarkThemeText" Color="{StaticResource MainColor}" />
                            </CheckBox.Foreground>
                        </CheckBox>
                    </Border>

                    <Border
                        Width="167"
                        Height="45"
                        Background="{StaticResource BackgroundColorBrushAlt}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="2"
                        Effect="{StaticResource MenuShadowButtonBorder}"
                        Focusable="False">
                        <CheckBox
                            x:Name="LightThemeRadio"
                            HorizontalContentAlignment="Center"
                            Content="{StaticResource LightTheme}"
                            Style="{StaticResource Checkstyle}">
                            <CheckBox.Background>
                                <SolidColorBrush x:Name="LightThemeBrush" Color="Transparent" />
                            </CheckBox.Background>
                            <CheckBox.Foreground>
                                <SolidColorBrush x:Name="LightThemeText" Color="{StaticResource MainColor}" />
                            </CheckBox.Foreground>
                        </CheckBox>
                    </Border>
                </WrapPanel>

                <Label
                    Margin="0,1,0,20"
                    HorizontalAlignment="Center"
                    Content="{StaticResource ChangingThemeRequiresRestart}"
                    FontSize="12" />

                <Label
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="{StaticResource MiscSettings}"
                    Foreground="{StaticResource MainColorBrush}" />

                <Border
                    Width="220"
                    Height="{DynamicResource LargeButtonHeight}"
                    Margin="0,3,10,3"
                    Background="{StaticResource BackgroundColorBrushAlt}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    Focusable="False">
                    <CheckBox
                        x:Name="SubDirRadio"
                        HorizontalContentAlignment="Center"
                        Content="{StaticResource SearchSubdirectory}"
                        Style="{StaticResource Checkstyle}">
                        <CheckBox.Background>
                            <SolidColorBrush x:Name="SubDirBrush" Color="{StaticResource BackgroundColorAlt}" />
                        </CheckBox.Background>
                        <CheckBox.Foreground>
                            <SolidColorBrush x:Name="SubDirText" Color="{StaticResource MainColor}" />
                        </CheckBox.Foreground>
                    </CheckBox>
                </Border>

                <Border
                    Width="220"
                    Height="{DynamicResource LargeButtonHeight}"
                    Margin="0,3,10,3"
                    Background="{StaticResource BackgroundColorBrushAlt}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    Focusable="False">
                    <CheckBox
                        x:Name="BorderRadio"
                        HorizontalContentAlignment="Center"
                        Content="{StaticResource ColoredWindowBorder}"
                        Style="{StaticResource Checkstyle}">
                        <CheckBox.Background>
                            <SolidColorBrush x:Name="BorderBrushColor" Color="{StaticResource BackgroundColorAlt}" />
                        </CheckBox.Background>
                        <CheckBox.Foreground>
                            <SolidColorBrush x:Name="BorderBrushText" Color="{StaticResource MainColor}" />
                        </CheckBox.Foreground>
                    </CheckBox>
                </Border>

                <Border
                    Width="220"
                    Height="{DynamicResource LargeButtonHeight}"
                    Margin="0,3,10,3"
                    Background="{StaticResource BackgroundColorBrushAlt}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    Focusable="False">
                    <CheckBox
                        x:Name="AltUIRadio"
                        HorizontalContentAlignment="Center"
                        Content="{StaticResource ShowButtonsInHiddenUI}"
                        Style="{StaticResource Checkstyle}">
                        <CheckBox.Background>
                            <SolidColorBrush x:Name="AltUIColor" Color="{StaticResource BackgroundColorAlt}" />
                        </CheckBox.Background>
                        <CheckBox.Foreground>
                            <SolidColorBrush x:Name="AltUIText" Color="{StaticResource MainColor}" />
                        </CheckBox.Foreground>
                    </CheckBox>
                </Border>

                <Label
                    Margin="0,15,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="{StaticResource SetAsWallpaper}" />

                <WrapPanel
                    Margin="23,3,23,8"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">

                    <Border
                        Width="105"
                        Height="{DynamicResource LargeButtonHeight}"
                        Margin="0,0,5,5"
                        Style="{StaticResource ButtonBorder}">
                        <Button
                            x:Name="Fill"
                            Content="{StaticResource Fill}"
                            FontSize="14">
                            <Button.Background>
                                <SolidColorBrush x:Name="FillBrush" Color="Transparent" />
                            </Button.Background>
                            <Button.Foreground>
                                <SolidColorBrush x:Name="FillText" Color="{StaticResource MainColor}" />
                            </Button.Foreground>
                        </Button>
                    </Border>

                    <Border
                        Width="105"
                        Height="{DynamicResource LargeButtonHeight}"
                        Margin="0,0,5,5"
                        Style="{StaticResource ButtonBorder}">
                        <Button
                            x:Name="Center"
                            Content="{StaticResource Center}"
                            FontSize="14">
                            <Button.Background>
                                <SolidColorBrush x:Name="CenterBrush" Color="Transparent" />
                            </Button.Background>
                            <Button.Foreground>
                                <SolidColorBrush x:Name="CenterText" Color="{StaticResource MainColor}" />
                            </Button.Foreground>
                        </Button>
                    </Border>

                    <Border
                        Width="105"
                        Height="{DynamicResource LargeButtonHeight}"
                        Margin="0,0,5,5"
                        Style="{StaticResource ButtonBorder}">
                        <Button
                            x:Name="Fit"
                            Content="{StaticResource Fit}"
                            FontSize="14">
                            <Button.Background>
                                <SolidColorBrush x:Name="FitBrush" Color="{StaticResource BackgroundColorAlt}" />
                            </Button.Background>
                            <Button.Foreground>
                                <SolidColorBrush x:Name="FitText" Color="{StaticResource MainColor}" />
                            </Button.Foreground>
                        </Button>
                    </Border>

                    <Border
                        Width="105"
                        Height="{DynamicResource LargeButtonHeight}"
                        Margin="0,0,5,5"
                        Style="{StaticResource ButtonBorder}">
                        <Button
                            x:Name="Tile"
                            Content="{StaticResource Tile}"
                            FontSize="14">
                            <Button.Background>
                                <SolidColorBrush x:Name="TileBrush" Color="{StaticResource BackgroundColorAlt}" />
                            </Button.Background>
                            <Button.Foreground>
                                <SolidColorBrush x:Name="TileText" Color="{StaticResource MainColor}" />
                            </Button.Foreground>
                        </Button>
                    </Border>

                    <Border
                        Width="105"
                        Height="{DynamicResource LargeButtonHeight}"
                        Margin="0,0,5,5"
                        Style="{StaticResource ButtonBorder}">
                        <Button
                            x:Name="Stretch"
                            Content="{StaticResource Stretch}"
                            FontSize="14">
                            <Button.Background>
                                <SolidColorBrush x:Name="StretchBrush" Color="{StaticResource BackgroundColorAlt}" />
                            </Button.Background>
                            <Button.Foreground>
                                <SolidColorBrush x:Name="StretchText" Color="{StaticResource MainColor}" />
                            </Button.Foreground>
                        </Button>
                    </Border>
                </WrapPanel>

                <Label
                    x:Name="LanguageLabel"
                    Margin="0,15,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="{StaticResource Language}" />

                <ComboBox
                    x:Name="LanguageBox"
                    Margin="0,9,0,7"
                    HorizontalAlignment="Center" />

                <Label
                    Margin="0,0,0,25"
                    HorizontalAlignment="Center"
                    Content="{StaticResource ChangingLanguageRequiresRestart}"
                    FontSize="12" />

                <Label
                    Margin="0,15,0,4"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="{StaticResource AdjustTimingForSlideshow}" />

                <StackPanel
                    Margin="0,3,0,10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">

                    <Slider
                        x:Name="SlideshowSlider"
                        Width="200"
                        Height="30"
                        IsSnapToTickEnabled="True"
                        Maximum="15"
                        Minimum="1"
                        TickFrequency=".5"
                        TickPlacement="BottomRight"
                        Value="5" />

                    <TextBox
                        x:Name="txtSlide"
                        Width="35"
                        Margin="5,3"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        IsReadOnly="True"
                        Text="{Binding ElementName=SlideshowSlider, Path=Value}"
                        TextAlignment="Center"
                        ToolTip="Enter the slideshow amount in seconds." />

                    <Label VerticalAlignment="Center" Content="Sec." />
                </StackPanel>

                <Border
                    Width="183"
                    Margin="0,10,0,12"
                    Style="{StaticResource ButtonBorder}">
                    <Button
                        x:Name="RestartButton"
                        Content="{StaticResource RestartApp}"
                        FontSize="14">
                        <Button.Background>
                            <SolidColorBrush x:Name="RestartBrush" Color="{StaticResource BackgroundColorAlt}" />
                        </Button.Background>
                        <Button.Foreground>
                            <SolidColorBrush x:Name="RestartText" Color="{StaticResource MainColor}" />
                        </Button.Foreground>
                    </Button>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>