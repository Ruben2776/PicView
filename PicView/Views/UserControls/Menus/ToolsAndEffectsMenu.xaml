                                                            EndLineCap="Round"
                                                            LineJoin="Round"
                                                            StartLineCap="Round"
                                                            Thickness="32">
                                                            <Pen.Brush>
                                                                <SolidColorBrush x:Name="IconBrush4" Color="{StaticResource IconColor}" />
                                                            </Pen.Brush>
                                                        </Pen>
                                                    </GeometryDrawing.Pen>
                                                    <GeometryDrawing.Geometry>
