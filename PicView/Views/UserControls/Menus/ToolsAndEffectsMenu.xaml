                                                    </GeometryDrawing.Geometry>
                                                </GeometryDrawing>
                                                <GeometryDrawing>
                                                    <GeometryDrawing.Pen>
                                                        <Pen
                                                            EndLineCap="Round"
                                                            LineJoin="Round"
                                                            StartLineCap="Round"
                                                            Thickness="32">
                                                            <Pen.Brush>
                                                                <SolidColorBrush x:Name="IconBrush3" Color="{StaticResource IconColor}" />
                                                            </Pen.Brush>
                                                        </Pen>
                                                    </GeometryDrawing.Pen>
