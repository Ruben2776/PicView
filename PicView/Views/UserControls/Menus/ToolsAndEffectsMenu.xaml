                </Border>

                <buttons:MenuCloseButton
                    x:Name="CloseButton"
                    Canvas.Left="305"
                    Canvas.Top="-1"
                    Height="52" />
            </Canvas>
        </Border>

        <Rectangle
            Width="23"
            Height="1"
            Margin="309,-1,0,0"
            HorizontalAlignment="Left"
            Fill="{StaticResource BackgroundColorBrushAlt}" />
        <Polygon
            Margin="305,-7,0,0"
            Panel.ZIndex="-1"
            Fill="{StaticResource BackgroundColorBrushAlt}"
            Points="0,0 15,30, 30,0"
            Stroke="{StaticResource BorderBrush}"
            StrokeThickness="2" />
    </StackPanel>
</UserControl>