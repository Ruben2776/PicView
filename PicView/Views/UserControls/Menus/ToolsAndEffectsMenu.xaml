                                                            Thickness="32">
                                                            <Pen.Brush>
                                                                <SolidColorBrush x:Name="OptimizeImageFill2" Color="{StaticResource IconColor}" />
                                                            </Pen.Brush>
                                                        </Pen>
                                                    </GeometryDrawing.Pen>
                                                </GeometryDrawing>
                                            </DrawingGroup>
                                        </DrawingImage.Drawing>
                                    </DrawingImage>
                                </Image.Source>
                            </Image>
                        </StackPanel>
                    </Button>
                </Border>

                <Border
                    x:Name="BgBorder"
                    Canvas.Left="172"
                    Canvas.Top="113"
                    Width="176"
                    Height="51"
                    Style="{StaticResource ButtonBorder}">
                    <Button
                        x:Name="BgButton"
                        FontFamily="/PicView;component/Themes/Resources/fonts/#Roboto SemiBold"
                        FontSize="13"
                        ToolTip="{StaticResource ColorPickerToolTooltip}">
                        <Button.Background>
                            <SolidColorBrush x:Name="BgBrush" Color="Transparent" />
                        </Button.Background>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Width="136"
                                MaxWidth="136"
                                Margin="4,2,2,2"
                                VerticalAlignment="Center"
                                Text="{StaticResource ChangeBackground}"
                                TextAlignment="Center"
                                TextWrapping="Wrap">
                                <TextBlock.Foreground>
                                    <SolidColorBrush x:Name="BgText" Color="{StaticResource MainColor}" />
                                </TextBlock.Foreground>
                            </TextBlock>
                            <Image Width="20" Height="20">
                                <Image.Source>
                                    <DrawingImage>
                                        <DrawingImage.Drawing>
                                            <DrawingGroup ClipGeometry="M0,0 V512 H512 V0 H0 Z">
                                                <GeometryDrawing>
                                                    <GeometryDrawing.Pen>
                                                        <Pen
                                                            EndLineCap="Flat"
                                                            LineJoin="Round"
                                                            StartLineCap="Flat"
                                                            Thickness="32">
