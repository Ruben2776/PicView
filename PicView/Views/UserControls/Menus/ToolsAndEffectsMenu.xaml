                                <Path.Fill>
                                    <SolidColorBrush x:Name="ColorPickerFill" Color="{StaticResource IconColor}" />
                                </Path.Fill>
                            </Path>
                        </StackPanel>
                    </Button>
                </Border>

                <Border
                    x:Name="OptimizeImageButtonBorder"
                    Canvas.Left="6"
                    Canvas.Top="113"
                    Width="160"
                    Height="51"
                    Style="{StaticResource ButtonBorder}">
                    <Button
                        x:Name="OptimizeImageButton"
                        Canvas.Left="196"
                        Canvas.Top="59"
                        FontFamily="/PicView;component/Themes/Resources/fonts/#Roboto SemiBold"
                        FontSize="13">
                        <Button.Background>
                            <SolidColorBrush x:Name="OptimizeImageBrush" Color="Transparent" />
                        </Button.Background>
                        <StackPanel Width="150" Orientation="Horizontal">
                            <TextBlock
                                Width="126"
                                MaxWidth="126"
                                Margin="0,2,2,2"
                                Text="{StaticResource OptimizeImage}"
                                TextAlignment="Center"
                                TextWrapping="Wrap">
                                <TextBlock.Foreground>
                                    <SolidColorBrush x:Name="OptimizeImageText" Color="{StaticResource MainColor}" />
                                </TextBlock.Foreground>
                            </TextBlock>
                            <Image Width="17" Height="17">
                                <Image.Source>
                                    <DrawingImage>
                                        <DrawingImage.Drawing>
                                            <DrawingGroup ClipGeometry="M0,0 V512 H512 V0 H0 Z">
