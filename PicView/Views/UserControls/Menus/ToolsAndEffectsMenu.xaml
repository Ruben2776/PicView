<UserControl
    x:Class="PicView.Views.UserControls.Menus.ToolsAndEffectsMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:buttons="clr-namespace:PicView.Views.UserControls.Buttons"
    Canvas.ZIndex="3"
    Foreground="{StaticResource MainColorBrush}">

    <UserControl.Resources>
        <SolidColorBrush
            x:Key="IconBrush"
            x:Name="IconBrush"
            Color="{StaticResource IconColor}" />
    </UserControl.Resources>

    <StackPanel>

        <Border
            Width="358"
            Height="175"
            Background="{StaticResource BackgroundColorBrushAlt}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4">
            <Canvas
                Width="356"
                Height="51"
                VerticalAlignment="Top"
                Background="{StaticResource BackgroundColorBrushAlt}">
                <Canvas.Effect>
                    <DropShadowEffect
                        BlurRadius="3"
                        Direction="266"
                        ShadowDepth="1"
                        Color="{StaticResource AltInterface}" />
                </Canvas.Effect>

                <Rectangle
                    Canvas.Left="-1"
                    Canvas.Top="50"
                    Width="358"
                    Panel.ZIndex="1"
                    Stroke="{StaticResource BorderBrush}"
                    StrokeThickness="1" />

                <Border
                    Canvas.Left="-1"
                    Canvas.Top="-1"
                    Height="52"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1,1,1,0"
                    CornerRadius="4,1,1,1">
                    <Button
                        x:Name="ResizeButton"
                        Width="169"
                        FontFamily="/PicView;component/Themes/Resources/fonts/#Roboto Medium"
                        FontSize="13">
