                    </Border>

                    <Border
                        Grid.Row="3"
                        Grid.Column="1"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundColorBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1,0,1,1">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Text="Double Click" />
                    </Border>


                    <Border
                        Grid.Row="3"
                        Grid.Column="2"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundColorBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1,0,1,1" />

                    <Border
                        Grid.Row="4"
                        Grid.Column="0"
                        Padding="0,3,0,3"
                        Background="{StaticResource AltInterfaceBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1,0,1,1">
                        <TextBlock
                            Margin="10,3,0,3"
                            FontSize="15"
                            Text="Toggle Scroll" />
                    </Border>

                    <Border
                        Grid.Row="4"
                        Grid.Column="1"
                        Padding="0,3,0,3"
