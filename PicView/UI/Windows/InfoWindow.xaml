<Window
    x:Class="PicView.UI.Windows.InfoWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:PicView.UI.UserControls"
    Title="{StaticResource ResourceKey=InfoWindowTitle}"
    AllowsTransparency="True"
    Background="#990F0F0F"
    FontFamily="/PicView;component/Library/Resources/fonts/#Roboto"
    Foreground="{StaticResource MainColorBrush}"
    ShowInTaskbar="False"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="txtItalic" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontFamily" Value="/PicView;component/Library/Resources/fonts/#Roboto LightItalic" />
            <Setter Property="FontStyle" Value="Italic" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="Foreground" Value="{StaticResource MainColorFadedBrush}" />
        </Style>
    </Window.Resources>

    <DockPanel
        Width="560"
        MinHeight="650"
        Margin="0,45,0,45"
        LastChildFill="True">
        <DockPanel.Effect>
            <DropShadowEffect
                BlurRadius="7"
                Direction="306"
                ShadowDepth="3"
                Color="#42000000" />
        </DockPanel.Effect>

        <DockPanel
            x:Name="TitleBar"
            Height="35"
            Background="{StaticResource WindowBackgroundColorBrush}"
            DockPanel.Dock="Top">

            <uc:Logo Margin="6,0,7,0" />

            <uc:CloseButton
                x:Name="CloseButton"
                VerticalAlignment="Center"
                DockPanel.Dock="Right" />

            <TextBlock
                x:Name="Bar"
                Height="35"
                Padding="5,7,45,0"
                VerticalAlignment="Center"
                d:Text="Information, help &amp; shortcuts"
                Background="{StaticResource BackgroundSubtleHighlightBrush}"
                FontFamily="/PicView;component/Library/Resources/fonts/#Roboto Bold"
                FontSize="15"
                Foreground="{StaticResource MainColorBrush}"
                Text="{StaticResource ResourceKey=InfoWindowTitle}"
                TextAlignment="Center"
                TextTrimming="CharacterEllipsis" />
        </DockPanel>

        <ScrollViewer
            x:Name="Scroller"
            Background="{StaticResource BackgroundColorBrushFadeSubtle}"
            CanContentScroll="False"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto">

            <StackPanel>

                <Label
                    Margin="1,22,0,11"
                    HorizontalAlignment="Center"
                    d:Content="Application Shortcuts"
                    Content="{StaticResource ResourceKey=ApplicationShortcuts}"
                    FontFamily="/PicView;component/Library/Resources/fonts/#Roboto Bold"
                    FontSize="15" />

                <Label
                    Margin="37,0,0,11"
                    d:Content="Navigation"
                    Content="{StaticResource ResourceKey=Navigation}" />

                <Grid Width="480" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Border
                        Grid.Row="0"
                        Grid.Column="0"
                        Padding="0,3,0,3"
                        Background="{StaticResource AltInterfaceBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1,1,1,0">
                        <TextBlock
                            Margin="10,3,0,3"
                            d:Text="Next Image"
                            FontSize="15"
                            Text="{StaticResource ResourceKey=NextImage}" />
                    </Border>

                    <Border
                        Grid.Row="0"
                        Grid.Column="1"
                        Padding="0,3,0,3"
                        Background="{StaticResource AltInterfaceBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,1,0">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Text="A" />
                    </Border>


                    <Border
                        Grid.Row="0"
                        Grid.Column="2"
                        Padding="0,3,0,3"
                        Background="{StaticResource AltInterfaceBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,1,0">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Text="Left" />
                    </Border>



                    <Border
                        Grid.Row="1"
                        Grid.Column="0"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundColorBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1,1,1,0">
                        <TextBlock
                            Margin="10,3,0,3"
                            FontSize="15"
                            Text="Previous Image" />
                    </Border>

                    <Border
                        Grid.Row="1"
                        Grid.Column="1"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundColorBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,1,0">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Text="D" />
                    </Border>


                    <Border
                        Grid.Row="1"
                        Grid.Column="2"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundColorBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,1,0">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Text="Right" />
                    </Border>


                    <Border
                        Grid.Row="2"
                        Grid.Column="0"
                        Padding="0,3,0,3"
                        Background="{StaticResource AltInterfaceBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1,1,1,0">
                        <TextBlock
                            Margin="10,3,0,3"
                            FontSize="15"
                            Text="Last Image" />
                    </Border>

                    <Border
                        Grid.Row="2"
                        Grid.Column="1"
                        Padding="0,3,0,3"
                        Background="{StaticResource AltInterfaceBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,1,0">
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock FontSize="14" Text="Ctrl" />
                            <TextBlock
                                FontSize="14"
                                Foreground="{StaticResource MainColorFadedBrush}"
                                Text=" + " />
                            <TextBlock FontSize="14" Text="A" />
                        </StackPanel>
                    </Border>


                    <Border
                        Grid.Row="2"
                        Grid.Column="2"
                        Padding="0,3,0,3"
                        Background="{StaticResource AltInterfaceBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,1,0">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Text="Ctrl + Left" />
                    </Border>


                    <Border
                        Grid.Row="4"
                        Grid.Column="0"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundColorBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1,0,1,0">
                        <TextBlock
                            Margin="10,3,0,3"
                            FontSize="15"
                            Text="First Image" />
                    </Border>

                    <Border
                        Grid.Row="4"
                        Grid.Column="1"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundColorBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1,0,1,0">
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock FontSize="14" Text="Ctrl" />
                            <TextBlock
                                FontSize="14"
                                Foreground="{StaticResource MainColorFadedBrush}"
                                Text=" + " />
                            <TextBlock FontSize="14" Text="D" />
                        </StackPanel>
                    </Border>


                    <Border
                        Grid.Row="4"
                        Grid.Column="2"
                        Padding="0,3,0,3"
                        Background="{StaticResource BackgroundColorBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1,0,1,0">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Text="Ctrl + Right" />
                    </Border>

                    <Border
                        Grid.Row="5"
                        Grid.Column="0"
                        Padding="0,3,0,3"
                        Background="{StaticResource AltInterfaceBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1,1,1,1">
