<Application
    x:Class="PicView.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="/Views/Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary x:Name="Language" Source="Translations\en.xaml" />
                <ResourceDictionary x:Name="ThemeColors" Source="Themes\Styles\ColorThemes\Dark.xaml" />
                <ResourceDictionary Source="Themes\Styles\MyWindowStyle.xaml" />
                <ResourceDictionary Source="Themes\Styles\Button.xaml" />
                <ResourceDictionary Source="Themes\Styles\Border.xaml" />
                <ResourceDictionary Source="Themes\Styles\ToggleButton.xaml" />
                <ResourceDictionary Source="Themes\Styles\ScrollBar.xaml" />
                <ResourceDictionary Source="Themes\Styles\RadioButton.xaml" />
                <ResourceDictionary Source="Themes\Styles\Label.xaml" />
                <ResourceDictionary Source="Themes\Styles\TextBox.xaml" />
                <ResourceDictionary Source="Themes\Styles\ComboBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    <JumpList.JumpList>
        <JumpList ShowFrequentCategory="True" ShowRecentCategory="False" />
    </JumpList.JumpList>
</Application>