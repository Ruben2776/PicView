                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Zoom out</Paragraph>
                                    </TableCell>
                                </TableRow>


                                <TableRow>
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>Ctrl</Bold>
                                            Numpad<Bold>-</Bold>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Decrease scale</Paragraph>
                                    </TableCell>
                                </TableRow>

                                <TableRow Background="{StaticResource BorderBrush}">
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>F6</Bold>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Reset zoom</Paragraph>
                                    </TableCell>
                                </TableRow>

                                <TableRow>
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>Home</Bold>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Scroll to top</Paragraph>
                                    </TableCell>
                                </TableRow>

                                <TableRow Background="{StaticResource BorderBrush}">
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>End</Bold>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Scroll to end</Paragraph>
                                    </TableCell>
                                </TableRow>

                                <TableRow>
                                    <TableCell>
                                        <Paragraph />
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph />
                                    </TableCell>
                                </TableRow>

                                <TableRow Background="{StaticResource BorderBrush}">
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>T</Bold>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Change between white/dark background</Paragraph>
                                    </TableCell>
                                </TableRow>

                                <TableRow>
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>Space</Bold>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Center application on current monitor</Paragraph>
                                    </TableCell>
                                </TableRow>


                                <TableRow Background="{StaticResource BorderBrush}">
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>Alt</Bold>
                                            +<Bold>Z</Bold>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Toggle between graphical interfaces</Paragraph>
                                    </TableCell>
                                </TableRow>

                                <TableRow>
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>
                                                Alt
                                                + Enter
                                            </Bold>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Toggle between fullscreen</Paragraph>
                                    </TableCell>
                                </TableRow>

                                <TableRow Background="{StaticResource BorderBrush}">
                                    <TableCell>
                                        <Paragraph />
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph />
                                    </TableCell>
                                </TableRow>

                                <TableRow>
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>Esc</Bold>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Close current window or menu</Paragraph>
                                    </TableCell>
                                </TableRow>

                                <TableRow Background="{StaticResource BorderBrush}">
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>Ctrl +Q</Bold>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Exit the application</Paragraph>
                                    </TableCell>
                                </TableRow>

                                <TableRow>
                                    <TableCell>
                                        <Paragraph />
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph />
                                    </TableCell>
                                </TableRow>

                                <TableRow Background="{StaticResource BorderBrush}">
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>Ctrl + O</Bold>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Open file dialog</Paragraph>
                                    </TableCell>
                                </TableRow>

                                <TableRow>
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>Ctrl + S</Bold>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Save file dialog</Paragraph>
                                    </TableCell>
                                </TableRow>

                                <TableRow Background="{StaticResource BorderBrush}">
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>F3</Bold>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Open file in Windows Explorer</Paragraph>
                                    </TableCell>
                                </TableRow>

                                <TableRow>
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>Ctrl + C</Bold>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Copy file</Paragraph>
                                    </TableCell>
                                </TableRow>

                                <TableRow>
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>Ctrl + X</Bold>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Cut file</Paragraph>
                                    </TableCell>
                                </TableRow>

                                <TableRow Background="{StaticResource BorderBrush}">
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>Ctrl + V</Bold>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Paste file</Paragraph>
                                    </TableCell>
                                </TableRow>

                                <TableRow>
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>Ctrl + P</Bold>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Print image</Paragraph>
                                    </TableCell>
                                </TableRow>

                                <TableRow Background="{StaticResource BorderBrush}">
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>Ctrl + R</Bold>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Reload image</Paragraph>
                                    </TableCell>
