                                <TableRow>
                                    <TableCell>
                                        <Paragraph />
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph />
                                    </TableCell>
                                </TableRow>

                                <TableRow Background="{StaticResource BorderBrush}">
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>Delete</Bold>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Send file to the recycle bin</Paragraph>
                                    </TableCell>
                                </TableRow>

                                <TableRow>
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>Shift + Delete</Bold>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Permanently delete file</Paragraph>
                                    </TableCell>
                                </TableRow>

                                <TableRow Background="{StaticResource BorderBrush}">
                                    <TableCell>
                                        <Paragraph />
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph />
                                    </TableCell>
                                </TableRow>

                                <!--  Title row  -->
                                <TableRow>
                                    <TableCell ColumnSpan="2" TextAlignment="Center">
                                        <Paragraph FontSize="26" FontWeight="Bold">Mouse Shortcuts</Paragraph>
                                    </TableCell>
                                </TableRow>

                                <TableRow>
                                    <TableCell>
                                        <Paragraph />
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph />
                                    </TableCell>
                                </TableRow>

                                <!--  Header row for the table.  -->
                                <TableRow Background="{StaticResource BorderBrush}">
                                    <TableCell>
                                        <Paragraph FontSize="18" FontWeight="Bold">Key</Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph FontSize="18" FontWeight="Bold">Function</Paragraph>
                                    </TableCell>
