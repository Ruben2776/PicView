                                    <TableCell>
                                        <Paragraph>
                                            <Bold>Mouse wheel</Bold>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Zoom</Paragraph>
                                    </TableCell>
                                </TableRow>


                                <TableRow Background="{StaticResource BorderBrush}">
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>Shift + Mouse wheel</Bold>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Change picture</Paragraph>
                                    </TableCell>
                                </TableRow>


                                <TableRow>
