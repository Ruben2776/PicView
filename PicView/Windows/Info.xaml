                                <TableRow>
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>Ctrl</Bold>
                                            +<Bold>Right</Bold>
                                            arrow key</Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Navigate to last picture</Paragraph>
                                    </TableCell>
                                </TableRow>

                                <TableRow Background="{StaticResource BorderBrush}">
                                    <TableCell>
                                        <Paragraph />
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph />
                                    </TableCell>
                                </TableRow>

                                <TableRow>
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>Up</Bold>
                                            arrow key</Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Rotate left</Paragraph>
                                    </TableCell>
                                </TableRow>

                                <TableRow Background="{StaticResource BorderBrush}">
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>W</Bold>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Rotate left</Paragraph>
                                    </TableCell>
                                </TableRow>

                                <TableRow>
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>Down</Bold>
                                            arrow key</Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Rotate right</Paragraph>
                                    </TableCell>
                                </TableRow>

                                <TableRow Background="{StaticResource BorderBrush}">
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>S</Bold>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Rotate right</Paragraph>
                                    </TableCell>
                                </TableRow>

                                <TableRow>
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>F</Bold>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Flip image</Paragraph>
                                    </TableCell>
                                </TableRow>

                                <TableRow Background="{StaticResource BorderBrush}">
                                    <TableCell>
                                        <Paragraph />
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph />
                                    </TableCell>
                                </TableRow>

                                <TableRow>
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>E</Bold>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Toggle window resizement</Paragraph>
                                    </TableCell>
                                </TableRow>

                                <TableRow Background="{StaticResource BorderBrush}">
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>T</Bold>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Change between white/dark background</Paragraph>
                                    </TableCell>
                                </TableRow>

                                <TableRow>
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>X</Bold>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Toggle scroll</Paragraph>
                                    </TableCell>
