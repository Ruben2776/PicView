                                    <TableCell>
                                        <Paragraph>
                                            <Bold>Page Up</Bold>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Zoom in</Paragraph>
                                    </TableCell>
                                </TableRow>

                                <TableRow Background="{StaticResource BorderBrush}">
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>Page Down</Bold>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Scroll down</Paragraph>
                                    </TableCell>
                                </TableRow>

                                <TableRow>
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>Page Up</Bold>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Scroll up</Paragraph>
                                    </TableCell>
                                </TableRow>

                                <TableRow Background="{StaticResource BorderBrush}">
                                    <TableCell>
                                        <Paragraph>
                                            Numpad<Bold>+</Bold>
                                        </Paragraph>
                                    </TableCell>
                                    <TableCell>
                                        <Paragraph>Zoom in</Paragraph>
                                    </TableCell>
                                </TableRow>


                                <TableRow>
                                    <TableCell>
                                        <Paragraph>
                                            <Bold>Ctrl</Bold>
