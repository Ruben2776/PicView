<UserControl
    x:Class="PicView.Views.UserControls.Misc.ToolTipMessage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border
        x:Name="SexyToolTipBorder"
        Margin="0,0,0,95"
        HorizontalAlignment="Center"
        VerticalAlignment="Bottom"
        Background="{StaticResource BackgroundColorBrushFade}"
        BorderBrush="{StaticResource BorderBrush}"
        BorderThickness="1"
        CornerRadius="6">
        <TextBlock
            x:Name="ToolTipUIText"
            MaxWidth="438"
            Padding="12"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontFamily="/PicView;component/Resources/fonts/#Roboto Medium"
            FontSize="16"
            FontStyle="Italic"
            FontWeight="Bold"
            Foreground="{StaticResource MainColorBrush}"
            TextWrapping="WrapWithOverflow" />
    </Border>
</UserControl>