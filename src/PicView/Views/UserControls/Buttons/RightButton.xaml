<UserControl
    x:Class="PicView.Views.UserControls.Buttons.RightButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Canvas
        x:Name="TheButton"
        Width="90"
        Height="25"
        FocusVisualStyle="{x:Null}"
        Focusable="False">
        <Canvas.Background>
            <SolidColorBrush x:Name="RightButtonBrush" Color="Transparent" />
        </Canvas.Background>
        <Path
            Canvas.Left="35.166"
            Canvas.Top="1"
            Width="19.669"
            Height="23"
            Data="F1M0.002,31.062L0,0 27.01,15.534z"
            Stretch="Fill">
            <Path.Fill>
                <SolidColorBrush x:Name="RightArrowFill" Color="{StaticResource IconColor}" />
            </Path.Fill>
        </Path>
    </Canvas>
</UserControl>