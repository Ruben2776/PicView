<UserControl
    Background="Transparent"
    Height="200"
    Width="85"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="PicView.Avalonia.Views.UC.Buttons.ClickArrowRight"
    x:DataType="viewModels:MainViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:PicView.Avalonia.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Button
        Background="{StaticResource AltBackgroundColor}"
        BorderBrush="{StaticResource MainBorderColor}"
        BorderThickness="1,1,0,1"
        Classes="hover"
        Command="{CompiledBinding NextArrowButtonCommand}"
        CornerRadius="2,0,0,2"
        Height="60"
        HorizontalAlignment="Right"
        Width="50">
        <Polygon
            Fill="{StaticResource MainIconColor}"
            Height="40"
            Margin="5,5,0,0"
            Points="160,128.4 192.3,96 352,256 352,256 352,256 192.3,416 160,383.6 287.3,256"
            RenderTransformOrigin="0.5,0.5"
            Stretch="Uniform"
            Width="20" />
    </Button>
</UserControl>
