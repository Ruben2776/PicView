<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="PicView.Avalonia.Views.AppearanceView"
    x:DataType="viewModels:MainViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:PicView.Avalonia.Views.UC"
    xmlns:viewModels="clr-namespace:PicView.Avalonia.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.DataContext>
        <viewModels:MainViewModel />
    </Design.DataContext>
    <StackPanel
        HorizontalAlignment="Center"
        Margin="0,15,0,0"
        Orientation="Vertical">

        <TextBlock
            Classes="txt"
            FontFamily="/Assets/Fonts/Roboto-Bold.ttf#Roboto"
            FontSize="14"
            Margin="0,10,0,10"
            Text="{Binding Language}" />

        <ComboBox
            Background="{StaticResource SecondaryBackgroundColor}"
            BorderBrush="{StaticResource MainBorderColor}"
            BorderThickness="1"
            FontFamily="/Assets/Fonts/Roboto-Medium.ttf#Roboto"
            Margin="0,0,0,5"
            Padding="5,7,0,7"
            SelectedIndex="0"
            Width="270"
            x:Name="LanguageBox" />

        <TextBlock
            Classes="txt"
            FontFamily="/Assets/Fonts/Roboto-Bold.ttf#Roboto"
            FontSize="14"
            Margin="0,10,0,10"
            Text="{Binding Theme}" />

        <ComboBox
            Background="{StaticResource SecondaryBackgroundColor}"
            BorderBrush="{StaticResource MainBorderColor}"
            BorderThickness="1"
            FontFamily="/Assets/Fonts/Roboto-Medium.ttf#Roboto"
            Margin="0,0,0,5"
            Padding="5,7,0,7"
            SelectedIndex="0"
            Width="270">
            <ComboBoxItem Content="{CompiledBinding DarkTheme}" />
            <ComboBoxItem Content="{CompiledBinding LightTheme}" />
        </ComboBox>

        <TextBlock
            Classes="txt"
            FontFamily="/Assets/Fonts/Roboto-Bold.ttf#Roboto"
            FontSize="14"
            Margin="0,15,0,10"
            Text="{Binding MiscSettings}" />

        <ToggleButton
            Background="Transparent"
            BorderThickness="0"
            Classes="altHover"
            Command="{Binding ToggleBottomNavBarCommand}"
            IsChecked="{Binding IsBottomToolbarShown}"
            Margin="0,0,0,3"
            Width="270">
            <TextBlock
                Classes="txt"
                Margin="0"
                MaxWidth="240"
                Padding="0,1,5,0"
                Text="{Binding ShowBottomToolbar}" />
        </ToggleButton>

        <ToggleButton
            Background="Transparent"
            BorderThickness="0"
            Classes="altHover"
            IsChecked="{Binding IsBottomGalleryShownInHiddenUI}"
            Margin="0,0,0,3"
            Width="270">
            <TextBlock
                Classes="txt"
                Margin="0"
                MaxWidth="240"
                Padding="0,1,5,0"
                Text="{Binding ShowBottomGalleryWhenUiIsHidden}" />
        </ToggleButton>

        <ToggleButton
            Background="Transparent"
            BorderThickness="0"
            Classes="altHover"
            IsChecked="{Binding IsShowingButtonsInHiddenUI}"
            Margin="0,0,0,3"
            Width="270">
            <TextBlock
                Classes="txt"
                Margin="0"
                MaxWidth="240"
                Padding="0,1,5,0"
                Text="{Binding ShowButtonsInHiddenUI}" />
        </ToggleButton>

        <ToggleButton
            Background="Transparent"
            BorderThickness="0"
            Classes="altHover"
            IsChecked="{Binding IsShowingTaskbarProgress}"
            Margin="0,0,0,3"
            Width="270"
            x:Name="TaskBarToggleButton">
            <TextBlock
                Classes="txt"
                Margin="0"
                MaxWidth="240"
                Padding="0,1,5,0"
                Text="{Binding ToggleTaskbarProgress}" />
        </ToggleButton>

        <TextBlock
            Classes="txt"
            FontFamily="/Assets/Fonts/Roboto-Bold.ttf#Roboto"
            FontSize="14"
            Margin="0,3,0,10"
            MaxWidth="270"
            Text="{Binding ExpandedGalleryItemSize}" />
        <uc:FullGalleryItemSizeSlider />
        <TextBlock
            Classes="txt"
            FontFamily="/Assets/Fonts/Roboto-Bold.ttf#Roboto"
            Foreground="{StaticResource MainTextColorFaded}"
            Margin="0,0,0,15"
            Text="{Binding GetExpandedGalleryItemHeight}" />

        <TextBlock
            Classes="txt"
            FontFamily="/Assets/Fonts/Roboto-Bold.ttf#Roboto"
            FontSize="14"
            Margin="0,3,0,10"
            MaxWidth="270"
            Text="{CompiledBinding BottomGalleryItemSize}" />
        <uc:BottomGalleryItemSizeSlider />
        <TextBlock
            Classes="txt"
            FontFamily="/Assets/Fonts/Roboto-Bold.ttf#Roboto"
            Foreground="{StaticResource MainTextColorFaded}"
            Margin="0,0,0,15"
            Text="{CompiledBinding GetBottomGalleryItemHeight}" />

        <Button
            Classes="BorderStyle altHover mainBtn"
            HorizontalAlignment="Center"
            Margin="0,20,0,10">
            <TextBlock Classes="txt" Text="{Binding ResetButtonText}" />
        </Button>
    </StackPanel>
</UserControl>